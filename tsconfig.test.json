{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "composite": true,
    "noEmit": true,
    "module": "es2020",
    "moduleResolution": "node",
    "verbatimModuleSyntax": false
  },
  "include": [
    "src",                       
    "jest.setup.ts",
    "src/**/*.test.tsx",
    "src/**/*.test.ts"
  ]
}